{
    "compilerOptions": {
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/types",
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "dist"]
}
